{
    "compilerOptions": {
        "outDir": "build",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017"
        ],
        "sourceMap": true,
        "declaration": true,
        "experimentalDecorators": true,
        "incremental": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "removeComments": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "build",
        "**/quokka-*.ts"
    ]
}